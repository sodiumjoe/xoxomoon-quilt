doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title xoxomoon
    link http://xoxomoon.com
    atom:link(href='http://xoxomoon.com/feed', rel='self', type='application/rss+xml')
    description Team Moon
    language en-US
    lastBuildDate= new Date(posts[0].date).toUTCString()
    each post in posts
      item
        title= post.title
        link http://xoxomoon.com/#{post.slug}
        pubDate= new Date(post.date).toUTCString()
        guid http://xoxomoon.com/#{post.slug}
        description!= post.excerpt

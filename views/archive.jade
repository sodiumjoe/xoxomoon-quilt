include head
include blog-nav

div.row
  each item in posts
    div.twelve.columns
      header
        h1.subheader
          !{item.year}
      div.row
        ul.twelve.columns.post-listings
          each post in item.posts
            li
              month = post.month;
              if (post.month < 10)
                month = '0' + post.month;
              a(href="/#{post.year}/#{month}/#{post.slug}")
                div.row
                  div.four.columns!= post.img
                  div.eight.columns
                    header
                      h4.subheader.post-title= post.title
                      h6.subheader.post-date= post.date.toDateString()
                      p.excerpt!= post.excerpt

include footer
